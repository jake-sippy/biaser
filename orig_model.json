{
  "dataset_reader":{
    "type": "text_classification_json",
    "lazy": true
  },
  "train_data_path": "data/reviews_Video_Games/train.json",
  "model": {
    "type": "basic_classifier",
    "text_field_embedder": {
        "type": "basic",
        "token_embedders": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 50
            }
        }
    },
    "seq2vec_encoder": {
        "type": "lstm",
        "input_size": 50,
        "hidden_size": 50,
        "num_layers": 2,
        "dropout": 0.25
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size" : 64
  },
  "trainer": {
    "num_epochs": 20,
    "patience": 10,
    "validation_metric": "-loss",
    "cuda_device": 0,
    "optimizer": {
      "type": "sgd",
      "lr": 0.1
    }
  }
}
