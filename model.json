
{
  "dataset_reader":{
    "type": "text_classification_json",
    "lazy": true
  },
  "train_data_path": "data/reviews_Video_Games_5_train.json",
  "test_data_path": "data/reviews_Video_Games_5_test.json",
  "model": {
    "type": "basic_classifier",
    "text_field_embedder": {
        "type": "basic",
        "token_embedders": {
            "tokens": {
                "type": "embedding",
                "embedding_dim": 100
            }
        }
    },
    "seq2vec_encoder": {
        "type": "lstm",
        "input_size": 100,
        "hidden_size": 100,
        "num_layers": 1,
        "dropout": 0.25
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size" : 64
  },
  "trainer": {
    "num_epochs": 20,
    "patience": 10,
    "grad_norm": 5.0,
    "validation_metric": "+accuracy",
    "cuda_device": -1,
    "optimizer": {
      "type": "adam",
      "betas": [0.9, 0.9]
    }
  },
  "vocabulary": {
    "directory_path": "vocabulary"
  }
}
