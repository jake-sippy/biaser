{
  "dataset_reader": {
    "type": "text_classification_json",
    "lazy": true
  },

  "train_data_path": "data/reviews_Video_Games_5_train.json",
  "test_data_path": "data/reviews_Video_Games_5_test.json",

  "model": {
    "type": "language_model",
    "text_field_embedder": {
      "type": "basic",
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 50
        }
      }
    },

    "contextualizer": {
      "type": "lstm",
      "input_size": 50,
      "hidden_size": 50,
      "num_layers": 2
    }
  },

  "iterator": {
    "type": "basic",
    "batch_size": 32
  },

  "trainer": {
    "optimizer": {
      "type": "adam"
    }
  }
}
